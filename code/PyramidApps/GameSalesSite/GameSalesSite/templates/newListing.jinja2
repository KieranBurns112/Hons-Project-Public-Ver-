<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" a href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"/>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <title> Video Game Resale </title>
  </head>
  <body>
    <!-- NavBar Element, used on each page of the site -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <a class="navbar-brand">Used Video Game Resale</a>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="\">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="search">Search</a>
        </li>

        {% if pageTitle == "New Listing" %}
          <li class="nav-item active">
            <a class="nav-link">Create Listing</a>
          </li>
        {% else %}
          <li class="nav-item">
            <a class="nav-link" href="new-listing">Create Listing</a>
          </li>
        {% endif %}

        <li class="nav-item">
          <a class="nav-link" href="my-listings">My Listings</a>
        </li>
      </ul>

      {% if signedIn %}
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="my-account">{{ username }}</a>
          </li>
        </ul>
      {% else %}
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="signup">Sign Up</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="login">Log In</a>
          </li>
        </ul>
      {% endif %}

    </nav>
    <!-- NavBar Element, used on each page of the site -->


    <!-- Error Handling -->
    {% if error != "none" %}
      <div class="alert alert-danger" role="alert">
        {{ error }}
      </div>
    {% endif %}
    <br>
    <!-- Error Handling -->

    <div class="container">
      <br>

      <center><h2>{{ pageTitle }}</h2></center>
      <br>
      <form method="POST">
        <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">
        <div class="form-group">
          <label for="title">Game Title</label>
          <input type="text" class="form-control" name="title" id="title"  placeholder="Enter Title" value="{{currentTitle}}">
        </div>

        <div class="form-group">
          <label for="platform">Platform</label>
          <select class="form-control" name="platform" id="platform">
            <option>Select Platform</option>
            {% for platform in platforms%}
              <option {% if currentPlatform == platform %} selected {% endif %}>{{ platform }}</option>
            {% endfor %}
          </select>
        </div>

        <div class="form-group">
          <label for="price">Price (Â£)</label>
          <input type="text" class="form-control" name="price" id="price" placeholder="Enter Price" value="{{currentPrice}}">
        </div>

        <br>
        <center><button type="submit" class="btn btn-primary btn-lg btn-block">
          {% if pageTitle == "New Listing" %}
            Create Listing
          {% else %}
            Save Changes
          {% endif %}
        </button></center>
      </form>
    </div>
  </body>
</html>
